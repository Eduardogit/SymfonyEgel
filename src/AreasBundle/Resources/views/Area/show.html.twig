{% extends '::baseAdmin.html.twig' %}
{% block body %}
    {{parent()}}
{% endblock %}
{% block content %}
  <section class="content">
   <div class="container-fluid">
    <div class="row">
    <h1>Area</h1>

    <div class="table-responsive">

        <table class="table records_list">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
        </tbody>
    </table>
</div>
        <a class="btn btn-w-md btn-accent" href="{{ path('area') }}">
            Regresar
        </a>
        <a   class="btn btn-w-md btn-primary"  href="{{ path('area_edit', { 'id': entity.id }) }}">
            Editar
        </a>
        {{ form_widget(delete_form.submit, { 'attr': {'class': 'btn btn-w-md btn-accent', 'type': 'button'} }) }}
</div>
</div>
</section>
    {% endblock %}
