{% extends '::baseAdmin.html.twig' %}
{% block body %}
{{parent()}}
{% endblock %}
{% block content %}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <h1>Perfil</h1>

            <div class="table-responsive">

                <table class="table records_list">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Nombre</th>
                            <td>{{ entity.nombre }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <a class="btn btn-w-md btn-accent" href="{{ path('perfil') }}">
                Regresar
            </a>
            <a  class="btn btn-w-md btn-primary" href="{{ path('perfil_edit', { 'id': entity.id }) }}">
                Edit
            </a>
            {{ form_widget(delete_form.submit, { 'attr': {'class': 'btn btn-w-md btn-accent', 'type': 'button'} }) }}
        </ul>
    </div>
</div>
</section>
{% endblock %}
