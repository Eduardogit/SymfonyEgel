{% extends '::baseAdmin.html.twig' %}

{% block body -%}
    <h1>Preguntas</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Pregunta</th>
                <td>{{ entity.pregunta }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
            <tr>
                <th>Respuestacorrecta</th>
                <td>{{ entity.respuestaCorrecta }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('preguntas') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('preguntas_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
