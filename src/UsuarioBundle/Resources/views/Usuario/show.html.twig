{% extends '::baseAdmin.html.twig' %}
{% block body %}
{{parent()}}
{% endblock %}
{% block content %}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <h1><small>Usuario</small></h1>

            <div class="table-responsive">

            <table class="table record_properties">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Username</th>
                        <td>{{ entity.username }}</td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ entity.nombre }}</td>
                    </tr>
                    <tr>
                        <th>Appaterno</th>
                        <td>{{ entity.apPaterno }}</td>
                    </tr>
                    <tr>
                        <th>Apmaterno</th>
                        <td>{{ entity.apMaterno }}</td>
                    </tr>
                    <tr>
                        <th>Fechanacimiento</th>
                        <td>{{ entity.fechaNacimiento|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Sexo</th>
                        <td>{{ entity.sexo }}</td>
                    </tr>
                    <tr>
                        <th>Domicilio</th>
                        <td>{{ entity.domicilio }}</td>
                    </tr>
                    <tr>
                        <th>Municipio</th>
                        <td>{{ entity.municipio }}</td>
                    </tr>
                    <tr>
                        <th>Estado</th>
                        <td>{{ entity.estado }}</td>
                    </tr>
                    <tr>
                        <th>Matricula</th>
                        <td>{{ entity.matricula }}</td>
                    </tr>
                </tbody>
            </table>
            </div>
            <div class="col-md-12">
                <a class="btn btn-default btn-w-md" href="{{ path('usuario') }}">
                    Regresar a usuarios
                </a>
                <a class="btn btn-default btn-w-md" href="{{ path('usuario_edit', { 'id': entity.id }) }}">
                    Editar
                </a>
                {{ form_widget(delete_form.submit, { 'attr': {'class': 'btn btn-w-md btn-accent', 'type': 'button'} }) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
